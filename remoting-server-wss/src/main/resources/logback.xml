    <logger additivity="true" name="com.acmedcare.framework.newim.wssServerLog">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="wss-server"/>
    </logger>

    <logger name="org.springframework">
        <appender-ref ref="CONSOLE"/>
        <level value="DEBUG"/>
    </logger>

    <logger name="io.undertow">
        <appender-ref ref="CONSOLE"/>
        <level value="DEBUG"/>
    </logger>

    <logger name="com.acmedcare.tiffany.framework.remoting">
        <appender-ref ref="CONSOLE"/>
        <level value="DEBUG"/>
    </logger>

    <logger name="TiffanyQuantumRemoting">
        <appender-ref ref="CONSOLE"/>
        <level value="DEBUG"/>
    </logger>

    <root>
        <level value="DEBUG"/>
        <appender-ref ref="rootFile"/>
    </root>
</configuration>

