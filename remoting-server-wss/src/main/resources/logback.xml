<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">

    <appender class="ch.qos.logback.core.ConsoleAppender" name="CONSOLE">
        <encoder>
            <Pattern>%date %level %msg%n</Pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
       name="start-log">
        <file>logs/wss/start.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/wss/start.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>2GB</maxFileSize>
            <MaxHistory>15</MaxHistory>
            <totalSizeCap>7GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <Pattern>%date %level %msg%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
       name="master-mongo-log">
        <file>logs/wss/cluster-mongo.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/wss/cluster-mongo.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>2GB</maxFileSize>
            <MaxHistory>15</MaxHistory>
